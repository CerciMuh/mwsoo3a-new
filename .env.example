# Environment variables for development
# Copy this file to .env.local and update with your values

# API Configuration
# Use this in the frontend to call the backend. Keep consistent with backend PORT.
VITE_API_BASE_URL=http://localhost:4000


# Application Configuration
VITE_APP_NAME=mwsoo3a
VITE_APP_VERSION=1.0.0

# AWS Cognito (custom UI via amazon-cognito-identity-js)
# Required: region, user pool id, app client id (no secret)
VITE_COGNITO_REGION=us-east-1
VITE_COGNITO_USER_POOL_ID=us-east-1_XXXXXXX
VITE_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional (only if you also keep the Hosted UI path enabled)
VITE_COGNITO_DOMAIN=https://your-domain.auth.us-east-1.amazoncognito.com
VITE_COGNITO_REDIRECT_URI=http://localhost:5173/auth/callback
VITE_COGNITO_LOGOUT_URI=http://localhost:5173/ 

# Backend (for deployment)
# In production, set CORS_ORIGIN to a comma-separated list of allowed origins, e.g. https://mwsoo3a.com,https://app.mwsoo3a.com
# CORS_ORIGIN=